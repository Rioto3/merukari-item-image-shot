{
  "manifest_version": 2,
  "name": "Mercari Image Downloader",
  "version": "1.0",
  "description": "メルカリ商品画像を一括ダウンロードするアドオン",
  "permissions": [
    "activeTab",
    "downloads",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "メルカリ画像ダウンローダー"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://jp.mercari.com/item/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}